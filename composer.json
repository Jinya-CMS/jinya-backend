{
  "name": "jinya/backend",
  "homepage": "https://jinya.de",
  "license": "MIT",
  "require": {
    "php": ">=8.0",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-zip": "*",
    "jetbrains/phpstorm-attributes": "1.0",
    "laminas/laminas-hydrator": "4.1.0",
    "guzzlehttp/guzzle": "7.2.0",
    "jinya/plates": "3.4.0",
    "monolog/monolog": "1.25.5",
    "php-di/php-di": "6.3.0",
    "phpmailer/phpmailer": "v6.1.7",
    "phpmyadmin/sql-parser": "dev-master",
    "scssphp/scssphp": "1.2.1",
    "slim/psr7": "1.3.0",
    "slim/slim": "4.7.1",
    "tedivm/jshrink": "dev-master",
    "vlucas/phpdotenv": "v5.2.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "3.5.8"
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S 0.0.0.0:8080 -t public",
    "test": "./vendor/bin/phpunit",
    "phpcs": "phpcs --standard=PSR12"
  }
}
